<background>
  <starttime>
    <year>2024</year>
    <month>10</month>
    <day>22</day>
    <hour>8</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>
  <!-- This animation will start at 8 AM. -->

  <!-- We start with Morning at 8 AM. It will remain up for 3 hours. -->
  <static>
    <duration>10800.0</duration>
    <file>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/morning.png</file>
  </static>

  <!-- Morning ends at 11 and transition for 1 hours -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/morning.png</from>
    <to>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/day.png</to>
  </transition>

  <!-- It's 12, we're showing the Day till 5 PM. -->
  <static>
    <duration>18000.0</duration>
    <file>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/day.png</file>
  </static>

  <!-- Day ends at 5 and transition for 1 hours -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/day.png</from>
    <to>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/dusk.png</to>
  </transition>

  <!-- It's 6, we're showing the dusk till 8 PM. -->
  <static>
    <duration>7200.0</duration>
    <file>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/dusk.png</file>
  </static>

  <!-- dusk ends at 7 and transition for 1 hours -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/dusk.png</from>
    <to>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/night.png</to>
  </transition>

  <!-- It's 8, we're showing the night till 7 AM. -->
  <static>
    <duration>36000.0</duration>
    <file>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/night.png</file>
  </static>

  <!-- It's 7 AM, and we're starting to transition to Morning. Transition completes at 8 AM. -->
  <transition type="overlay">
    <duration>3600.0</duration>
    <from>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/night.png</from>
    <to>/usr/share/backgrounds/Dynamic_Wallpapers/Hills2/night.png</to>
  </transition>

</background>